<div class="banner d-flex p-2 justify-content-between">
  <h1>All Restaurants</h1>
  <button type="button" class="btn btn-success"><%= link_to "Add a new restaurant", new_restaurant_path, class: "color-white" %></button>

</div>

<div class="all-cards">
<% @restaurants.each do |restaurant| %>
<div class="card mb-3" style="width: 18rem;">
  <img class="card-img-top" src="https://images.unsplash.com/photo-1515669097368-22e68427d265?w=700&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8cmVzdGF1cmFudHN8ZW58MHx8MHx8fDA%3D" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><strong><%= restaurant.name %></strong></h5>
    <p class="card-text"><%= restaurant.address %></p>
    <p class="card-text"><%= restaurant.phone_number %></p>
    <p class="card-text"><%= restaurant.category %></p>
    <button type="button" class="btn btn-primary"><%= link_to "Go to restaurant", restaurant_path(restaurant), class: "color-white" %></button>
  </div>
</div>
  <% end %>
</div>

