<h1>Add a new restaurant</h1>


<div class="te mt-3">
  <%= form_with model: @restaurant, class: "needs-validation", novalidate: true do |f| %>

    <div class="form-group mb-2">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Restaurant name " %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control", placeholder: "Enter Restaurant address" %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :Phone_Number, class: "form-label" %>
      <%= f.text_field :Phone_Number, class: "form-control", placeholder: "Enter Phone Number" %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :category, class: "form-label" %>
      <%= f.select :category, options_for_select([['Chinese', 'chinese'], ['Italian', 'italian'], ['Japanese', 'japanese'], ['French', 'french'], ['Belgian', 'belgian']]), {}, {class: "form-control"} %>
    </div>

    <div class="boutons">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Back to list", restaurants_path, class: "btn btn-secondary mt-2" %>
    </div>
<% end %>
</div>
